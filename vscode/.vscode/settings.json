{
    // -- Geneal
    //--------------------------------------------------------------------------
    "oneDarkPro.italic": false,
    "workbench.colorTheme": "One Dark Pro",
    "window.commandCenter": true,
    "security.workspace.trust.untrustedFiles": "open",
    "files.exclude": {
        "**/*.exe": true
    },
    "files.autoGuessEncoding": true,
    "files.autoSave": "onFocusChange",
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": true,
    "editor.renderWhitespace": "all",
    "editor.rulers": [80],
    "editor.mouseWheelZoom": true,
    "editor.minimap.enabled": false,
    "editor.stickyScroll.enabled": true,
    "editor.bracketPairColorization.enabled": true,
    "editor.inlayHints.enabled": "offUnlessPressed",
    "editor.guides.bracketPairs": true,
    "editor.guides.bracketPairsHorizontal": "active",
    "editor.fontFamily": "'JetBrainsMono Nerd Font', Consolas",
    "editor.fontLigatures": false,
    "diffEditor.renderSideBySide": false,
    "terminal.integrated.profiles.windows": {
        "Git Bash": {
            "source": "Git Bash",
            "path": ["D:\\Software\\Scoop\\apps\\git\\current\\bin\\bash.exe"],
            "icon": "terminal-bash"
        }
    },
    "terminal.integrated.defaultProfile.linux": "fish",
    "terminal.integrated.defaultProfile.windows": "Git Bash",
    "terminal.integrated.enableMultiLinePasteWarning": false,

    // -- Markdown
    //--------------------------------------------------------------------------
    "markdown-preview-enhanced.previewTheme": "atom-dark.css",
    "markdown-preview-enhanced.codeBlockTheme": "one-dark.css",

    // -- Project Manager
    //--------------------------------------------------------------------------
    "projectManager.git.baseFolders": ["d:/Workbench/"],
    "projectManager.sortList": "Recent",

    // -- Vim
    //--------------------------------------------------------------------------
    "editor.lineNumbers": "relative",
    "vim.easymotion": true,
    // "vim.sneak": true,
    "vim.surround": true,
    "vim.camelCaseMotion.enable": true,
    "vim.useSystemClipboard": true,
    "vim.vimrc.enable": true,
    "vim.vimrc.path": "$HOME/.vscodevimrc",
    "vim.useCtrlKeys": true,
    "vim.handleKeys": {
        "<C-c>": false,
        "<C-v>": false,
        "<C-x>": false,
        "<C-a>": false,
        "<C-f>": false,
        "<C-s>": false,
        "<C-w>": false,
        "<C-p>": false
    },
    "vim.foldfix": true,
    "vim.hlsearch": true,
    "vim.incsearch": true,
    "vim.leader": "<space>",
    "vim.normalModeKeyBindings": [
        {
            "before": ["<leader>", "r", "n"],
            "commands": ["editor.action.rename"]
        },
        {
            "before": ["<leader>", "f"],
            "commands": ["editor.action.formatDocument"]
        },
        // ---- which key
        {
            "before": [";"],
            "commands": ["whichkey.show"]
        },
        // ---- git
        {
            "before": ["<leader>", "j"],
            "commands": [
                "workbench.action.editor.nextChange",
                "workbench.action.compareEditor.nextChange"
            ]
        },
        {
            "before": ["<leader>", "k"],
            "commands": [
                "workbench.action.editor.previousChange",
                "workbench.action.compareEditor.previousChange"
            ]
        },
        // ---- problems
        {
            "before": ["<leader>", "-"],
            "commands": ["editor.action.marker.prev"]
        },
        {
            "before": ["<leader>", "="],
            "commands": ["editor.action.marker.next"]
        },
        {
            "before": ["<leader>", "c", "a"],
            "commands": ["editor.action.quickFix"]
        },
        // ---- code
        {
            "before": ["<leader>", "g", "r"],
            "commands": ["editor.action.referenceSearch.trigger"]
        },
        {
            "before": ["<leader>", "g", "R"],
            "commands": ["references-view.findReferences"]
        },
        {
            "before": ["<leader>", "c", "h"],
            "commands": ["references-view.showCallHierarchy"]
        },
        {
            "before": ["<leader>", "c", "r"],
            "commands": ["workbench.action.files.save", "workbench.action.debug.run"]
        },
        // ---- debug
        {
            "before": ["<leader>", "d", "b"],
            "commands": ["editor.debug.action.toggleBreakpoint"]
        },
        {
            "before": ["<leader>", "d", "c"],
            "commands": ["editor.debug.action.conditionalBreakpoint"]
        },
        {
            "before": ["<leader>", "d", "r"],
            "commands": ["workbench.action.files.save", "workbench.action.debug.start"]
        }
    ],
    "vim.normalModeKeyBindingsNonRecursive": [
        // undo & redo
        {
            "before": ["u"],
            "commands": ["undo"]
        },
        {
            "before": ["C-r"],
            "commands": ["redo"]
        }
    ],
    "vim.visualModeKeyBindings": [
        {
            "before": [";"],
            "commands": ["whichkey.show"]
        },
        {
            "before": [">"],
            "commands": ["editor.action.indentLines"]
        },
        {
            "before": ["<"],
            "commands": ["editor.action.outdentLines"]
        }
    ],
    "vim.visualModeKeyBindingsNonRecursive": [
        {
            "before": ["<leader>", "f"],
            "commands": ["editor.action.formatSelection"]
        }
    ],
    // "vim.autoSwitchInputMethod.enable": true,
    // "vim.autoSwitchInputMethod.defaultIM": "1033",
    // "vim.autoSwitchInputMethod.obtainIMCmd": "D:\\Software\\im-select\\win\\out\\x64\\im-select.exe",
    // "vim.autoSwitchInputMethod.switchIMCmd": "D:\\Software\\im-select\\win\\out\\x64\\im-select.exe {im}",
    "extensions.experimental.affinity": {
        "vscodevim.vim": 1
    },

    // -- Which Key
    //--------------------------------------------------------------------------
    "whichkey.delay": 0,
    // "whichkey.sortOrder": "alphabetically",
    "whichkey.bindings": [
        {
            "key": ";",
            "name": "Commands",
            "type": "command",
            // "command": "workbench.action.showCommands"
            "command": "vim.showQuickpickCmdLine"
        },
        {
            "key": "/",
            "name": "Comment",
            "type": "command",
            "command": "editor.action.commentLine"
        },
        {
            "key": "b",
            "name": "+Buffers/Editors",
            "type": "bindings",
            "bindings": [
                {
                    "key": "b",
                    "name": "Show all buffers/editors",
                    "type": "command",
                    "command": "workbench.action.showAllEditors"
                },
                {
                    "key": "n",
                    "name": "Next editor",
                    "type": "command",
                    "command": "workbench.action.nextEditor"
                },
                {
                    "key": "p",
                    "name": "Previous editor",
                    "type": "command",
                    "command": "workbench.action.previousEditor"
                },
                {
                    "key": "d",
                    "name": "Close active editor",
                    "type": "command",
                    "command": "workbench.action.closeActiveEditor"
                },
                {
                    "key": "m",
                    "name": "Close other editors",
                    "type": "command",
                    "command": "workbench.action.closeOtherEditors"
                },
                {
                    "key": "u",
                    "name": "Reopen closed editor",
                    "type": "command",
                    "command": "workbench.action.reopenClosedEditor"
                },
                {
                    "key": "h",
                    "name": "Move editor into left group",
                    "type": "command",
                    "command": "workbench.action.moveEditorToLeftGroup"
                },
                {
                    "key": "j",
                    "name": "Move editor into below group",
                    "type": "command",
                    "command": "workbench.action.moveEditorToBelowGroup"
                },
                {
                    "key": "k",
                    "name": "Move editor into above group",
                    "type": "command",
                    "command": "workbench.action.moveEditorToAboveGroup"
                },
                {
                    "key": "l",
                    "name": "Move editor into right group",
                    "type": "command",
                    "command": "workbench.action.moveEditorToRightGroup"
                }
            ]
        },
        {
            "key": "d",
            "name": "+Debug",
            "type": "bindings",
            "bindings": [
                {
                    "key": "d",
                    "name": "Start debug",
                    "type": "command",
                    "command": "workbench.action.debug.start"
                },
                {
                    "key": "S",
                    "name": "Stop debug",
                    "type": "command",
                    "command": "workbench.action.debug.stop"
                },
                {
                    "key": "c",
                    "name": "Continue debug",
                    "type": "command",
                    "command": "workbench.action.debug.continue"
                },
                {
                    "key": "p",
                    "name": "Pause debug",
                    "type": "command",
                    "command": "workbench.action.debug.pause"
                },
                {
                    "key": "r",
                    "name": "Run without debugging",
                    "type": "command",
                    "command": "workbench.action.debug.run"
                },
                {
                    "key": "R",
                    "name": "Restart debug",
                    "type": "command",
                    "command": "workbench.action.debug.restart"
                },
                {
                    "key": "i",
                    "name": "Step into",
                    "type": "command",
                    "command": "workbench.action.debug.stepInto"
                },
                {
                    "key": "s",
                    "name": "Step over",
                    "type": "command",
                    "command": "workbench.action.debug.stepOver"
                },
                {
                    "key": "o",
                    "name": "Step out",
                    "type": "command",
                    "command": "workbench.action.debug.stepOut"
                },
                {
                    "key": "j",
                    "name": "Jump to cursor",
                    "type": "command",
                    "command": "debug.jumpToCursor"
                },
                {
                    "key": "b",
                    "name": "Toggle breakpoint",
                    "type": "command",
                    "command": "editor.debug.action.toggleBreakpoint"
                },
                {
                    "key": "B",
                    "name": "Toggle inline breakpoint",
                    "type": "command",
                    "command": "editor.debug.action.toggleInlineBreakpoint"
                },
                {
                    "key": "C",
                    "name": "Toggle conditional break point",
                    "type": "command",
                    "commands": "editor.debug.action.conditionalBreakpoint"
                },
                {
                    "key": "v",
                    "name": "Toggle Repl",
                    "type": "command",
                    "command": "workbench.debug.action.toggleRepl"
                },
                {
                    "key": "w",
                    "name": "Focus on watch window",
                    "type": "command",
                    "command": "workbench.debug.action.focusWatchView"
                },
                {
                    "key": "W",
                    "name": "Add to watch",
                    "type": "command",
                    "command": "editor.debug.action.selectionToWatch"
                }
            ]
        },
        {
            "key": "e",
            "name": "Toggle Explorer",
            "type": "command",
            "command": "workbench.action.toggleSidebarVisibility"
        },
        {
            "key": "f",
            "name": "+Find",
            "type": "bindings",
            "bindings": [
                {
                    "key": "f",
                    "name": "File",
                    "type": "command",
                    "command": "editor.action.startFindReplaceAction"
                },
                {
                    "key": "p",
                    "name": "Project",
                    "type": "command",
                    "command": "workbench.action.replaceInFiles"
                },
                {
                    "key": "w",
                    "name": "New search editor",
                    "type": "command",
                    "command": "search.action.openEditor"
                }
            ]
        },
        {
            "key": "g",
            "name": "+Git",
            "type": "bindings",
            "bindings": [
                {
                    "key": "g",
                    "name": "Show source code manager",
                    "type": "command",
                    "command": "workbench.view.scm"
                },
                {
                    "key": "f",
                    "name": "Open file",
                    "type": "command",
                    "command": "git.openFile"
                },
                {
                    "key": "c",
                    "name": "Open change",
                    "type": "command",
                    "command": "git.openChange"
                },
                {
                    "key": "d",
                    "name": "Toggle diff side by side",
                    "type": "command",
                    "command": "toggle.diff.renderSideBySide"
                },
                {
                    "key": "j",
                    "name": "Next change",
                    "type": "command",
                    "commands": [
                        "workbench.action.editor.nextChange",
                        "workbench.action.compareEditor.nextChange"
                    ]
                },
                {
                    "key": "l",
                    "name": "File Blame",
                    "type": "command",
                    "command": "gitlens.toggleFileBlame"
                },
                {
                    "key": "k",
                    "name": "Previous change",
                    "type": "command",
                    "commands": [
                        "workbench.action.editor.previousChange",
                        "workbench.action.compareEditor.previousChange"
                    ]
                },
                {
                    "key": "r",
                    "name": "revert selected range",
                    "type": "command",
                    "command": "git.revertSelectedRanges",
                    "when": "isInDiffEditor && !operationInProgress"
                },
                {
                    "key": "R",
                    "name": "revert change",
                    "type": "command",
                    "command": "git.revertChange"
                },
                {
                    "key": "s",
                    "name": "Stage selected ranges",
                    "type": "command",
                    "command": "git.stageSelectedRanges",
                    "when": "isInDiffEditor && !operationInProgress"
                },
                {
                    "key": "S",
                    "name": "Stage change",
                    "type": "command",
                    "command": "git.stage"
                },
                {
                    "key": "u",
                    "name": "Unstage selected ranges",
                    "type": "command",
                    "command": "git.unstageSelectedRanges",
                    "when": "isInDiffEditor && !operationInProgress"
                },
                {
                    "key": "U",
                    "name": "Unstage file",
                    "type": "command",
                    "command": "git.unstage"
                }
            ]
        },
        {
            "key": "h",
            "name": "Split Horizontal",
            "type": "command",
            "command": "workbench.action.splitEditorDown"
        },
        {
            "key": "m",
            "name": "Markdown",
            "type": "command",
            "command": "markdown-preview-enhanced.openPreviewToTheSide",
            "when": "editorLangId == 'markdown'"
        },
        {
            "key": "p",
            "name": "Toggle Project Manager",
            "type": "command",
            "command": "projectManager.listProjects"
        },
        {
            "key": "s",
            "name": "+Show UI",
            "type": "bindings",
            "bindings": [
                {
                    "key": "e",
                    "name": "Show explorer",
                    "type": "command",
                    "command": "workbench.view.explorer"
                },
                {
                    "key": "s",
                    "name": "Show search",
                    "type": "command",
                    "command": "workbench.view.search"
                },
                {
                    "key": "g",
                    "name": "Show source control",
                    "type": "command",
                    "command": "workbench.view.scm"
                },
                {
                    "key": "x",
                    "name": "Show extensions",
                    "type": "command",
                    "command": "workbench.view.extensions"
                },
                {
                    "key": "r",
                    "name": "Show remote explorer",
                    "type": "command",
                    "command": "workbench.view.remote"
                },
                {
                    "key": "p",
                    "name": "Show problem",
                    "type": "command",
                    "command": "workbench.actions.view.problems"
                },
                {
                    "key": "o",
                    "name": "Show output",
                    "type": "command",
                    "command": "workbench.action.output.toggleOutput"
                },
                {
                    "key": "d",
                    "name": "Show debug console",
                    "type": "command",
                    "command": "workbench.debug.action.toggleRepl"
                }
            ]
        },
        {
            "key": "t",
            "name": "+Toggle UI",
            "type": "bindings",
            "bindings": [
                {
                    "key": "a",
                    "name": "Toggle activity bar",
                    "type": "command",
                    "command": "workbench.action.toggleActivityBarVisibility"
                },
                {
                    "key": "A",
                    "name": "Toggle auxiliary bar",
                    "type": "command",
                    "command": "workbench.action.toggleAuxiliaryBar"
                },
                {
                    "key": "e",
                    "name": "Toggle explorer",
                    "type": "command",
                    "command": "workbench.action.toggleSidebarVisibility"
                },
                {
                    "key": "j",
                    "name": "Toggle panel",
                    "type": "command",
                    "command": "workbench.action.togglePanel"
                },
                {
                    "key": "t",
                    "name": "Toggle terminal",
                    "type": "command",
                    "command": "workbench.action.togglePanel"
                },
                {
                    "key": "m",
                    "name": "Toggle minimap",
                    "type": "command",
                    "command": "editor.action.toggleMinimap"
                },
                {
                    "key": "M",
                    "name": "Toggle maximized panel",
                    "type": "command",
                    "command": "workbench.action.toggleMaximizedPanel"
                },
                {
                    "key": "z",
                    "name": "Toggle zen mode",
                    "type": "command",
                    "command": "workbench.action.toggleZenMode"
                }
            ]
        },
        {
            "key": "v",
            "name": "Split Vertical",
            "type": "command",
            "command": "workbench.action.splitEditor"
        }
    ],

    // -- Better Comments
    //--------------------------------------------------------------------------
    "better-comments.tags": [
        {
            "tag": "!",
            "color": "#FF2D00",
            "strikethrough": false,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": false,
            "italic": false
        },
        {
            "tag": "?",
            "color": "#3498DB",
            "strikethrough": false,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": false,
            "italic": false
        },
        {
            "tag": "//",
            "color": "#474747",
            "strikethrough": true,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": false,
            "italic": false
        },
        {
            "tag": "todo",
            "color": "#FF8C00",
            "strikethrough": false,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": false,
            "italic": false
        },
        {
            "tag": "*",
            "color": "#98C379",
            "strikethrough": false,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": false,
            "italic": false
        }
    ],

    // -- Error Lens
    //--------------------------------------------------------------------------
    // "errorLens.gutterIconsEnabled": true,
    "errorLens.enabledDiagnosticLevels": [
        "error",
        "warning",
        "info"
        // "hint"
    ],

    // -- Comment Translate
    //--------------------------------------------------------------------------
    "commentTranslate.hover.enabled": true,
    "commentTranslate.hover.content": true,
    "commentTranslate.hover.nearShow": true,
    "commentTranslate.sourceLanguage": "auto",
    "commentTranslate.targetLanguage": "zh-CN",
    "commentTranslate.source": "Google",

    // -- C/C++
    //--------------------------------------------------------------------------
    "C_Cpp.inlayHints.autoDeclarationTypes.enabled": true,
    "C_Cpp.inlayHints.parameterNames.enabled": true,
    "C_Cpp.inlayHints.autoDeclarationTypes.showOnLeft": true,
    "C_Cpp.inlayHints.referenceOperator.enabled": true,

    // -- Clangd
    //--------------------------------------------------------------------------
    // "C_Cpp.intelliSenseEngine": "disabled",
    "clangd.detectExtensionConflicts": false,
    "clangd.path": "clangd",
    "clangd.arguments": [
        "--compile-commands-dir=${workspaceFolder}/build",
        "--query-driver=**",
        "--log=verbose",
        "--background-index",
        "--pch-storage=memory",
        "--clang-tidy",
        "--all-scopes-completion",
        "--completion-style=detailed",
        "--header-insertion=iwyu",
        "-j=6"
    ],

    // -- CodeLLDB
    //--------------------------------------------------------------------------
    "lldb.commandCompletions": true,
    "lldb.dereferencePointers": true,
    "lldb.evaluateForHovers": true,
    "lldb.launch.expressions": "native",
    "lldb.showDisassembly": "never",
    "lldb.verboseLogging": true,

    // -- CMake
    //--------------------------------------------------------------------------
    "cmake.cmakePath": "cmake",
    "cmake.configureOnOpen": false,
    "cmake.generator": "Unix Makefiles", // Unix Makefiles or Ninja
    "cmake.buildDirectory": "${workspaceFolder}/build",

